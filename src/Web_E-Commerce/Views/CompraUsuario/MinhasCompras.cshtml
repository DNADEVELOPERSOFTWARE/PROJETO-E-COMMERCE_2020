@model Entity.Entities.Compras.CompraUsuario

@{
    ViewData["Title"] = "MinhasCompras";
}



<div>
    <h1>Minhas Compras</h1>
    @if (Model.ListaProdutos.Any())
    {
        <hr />
        <a class="nav-link text-dark" asp-area="" asp-controller="CompraUsuario" asp-action="Imprimir">Imprimir boleto</a>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndercoCompleto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndercoCompleto)
            </dd>
            <dt class="col-sm-2">
                CEP
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.CEP)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuantidadeProduto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantidadeProduto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ValorTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ValorTotal)
            </dd>

        </dl>
        <h4>Produtos Comprados</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Imagem</th>
                    <th>Descrição</th>
                    <th>Observação</th>
                    <th>Valor</th>
                    <th>Quantidade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaProdutos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Url))
                            {
                                <img width="80" height="80" src=@item.Url />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Observacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantidadeCompra)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
    <h3>Não há itens no carrinho!!!</h3>
    }
</div>

